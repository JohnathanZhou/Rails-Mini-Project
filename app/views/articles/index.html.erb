
<h1>Single page of articles - </h1>
<%= form_with model: @article, local: true do |form| %>
  <p>
    Enter a new article here!
  </p>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, value:"Title"%>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text,
    value:"Text"%>
  </p>

  <p>
    <%= form.submit :"New article!"%>
  </p>
<% end %>

<table>
  <h2>Current articles:</h2>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <!-- <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td> -->
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'This will delete this post - are you sure?' } %></td>
    </tr>
  <% end %>
</table>
